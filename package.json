{
  "name": "zcapprotrac",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^4.0.2",
    "@sap-cloud-sdk/resilience": "^4.0.2",
    "@sap/cds": "^8",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@sap/cds-dk": "^8",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open zcapprotrac/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-zpermit": "cds watch --open zpermit/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy zcapprotrac --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": "dummy",
      "infra": {
        "kind": "odata-v2",
        "model": "srv/external/infra",
        "credentials": {
          "destination": "SFD_HTTPS",
          "path": "/sap/opu/odata/sap/ZINFRA_SFTY_PERMIT_SRV/"
        }
      }
    },
    "features": {
      "skipDb": true
    }
  },
  "sapux": [
    "app/zpermit"
  ]
}
